{
  "name": "infra",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/infra",
  "targets": {
    "up": {
      "executor": "@nx-extend/pulumi:up",
      "options": {}
    },
    "preview": {
      "executor": "@nx-extend/pulumi:preview",
      "options": {}
    },
    "refresh": {
      "executor": "@nx-extend/pulumi:refresh",
      "options": {}
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "libraryTargets": ["global", "commonjs", "amd", "umd"],
        "outputPath": "dist/apps/infra",
        "main": "apps/infra/index.ts",
        "additionalEntryPoints": [
          {
            "entryName": "customMessage",
            "entryPath": "apps/infra/stack/cognito/lambdas/messages/handler.ts"
          }
        ],
        "tsConfig": "apps/infra/tsconfig.app.json",
        "webpackConfig": "apps/infra/webpack.config.js",
        "externalDependencies": "all",
        "babelUpwardRootMode": true,
        "defaultConfiguration": "production",
        "generatePackageJson": true
      },
      "configurations": {
        "production": {

          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/infra/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": []
}
